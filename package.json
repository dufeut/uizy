{
  "name": "@dufeut/uizy",
  "version": "0.1.4",
  "description": "Micro utility-first CSS framework with reactive web components and state management.",
  "license": "BSD-3-Clause",
  "author": "dufeut",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "style": "dist/index.css",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/uizy.iife.js",
      "default": "./dist/index.js"
    },
    "./index.css": {
      "style": "./dist/index.css",
      "import": "./dist/index.css",
      "default": "./dist/index.css"
    },
    "./dist/*": "./dist/*"
  },
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build && tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "cssnano": "^7.1.2",
    "postcss": "^8.5.6",
    "sass": "^1.77.8",
    "terser": "^5.44.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.7"
  },
  "dependencies": {
    "nanostores": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dufeut/uizy.git"
  },
  "keywords": [
    "css",
    "css-framework",
    "utility-css",
    "micro-framework",
    "responsive",
    "lightweight",
    "web-components",
    "nanostores",
    "reactive"
  ],
  "bugs": {
    "url": "https://github.com/dufeut/uizy/issues"
  },
  "homepage": "https://github.com/dufeut/uizy#readme",
  "files": [
    "dist"
  ]
}
